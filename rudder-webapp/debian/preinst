#!/bin/sh
# preinst script for rudder-webapp
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install)
    ;;

    upgrade)

      echo "********************************************************************************"
      echo "INFO: dpkg may ask you if you want to replace rudder-web.properties or          "
      echo "INFO: inventory-web.properties with the maintainer version if you modified it.  "
      echo "INFO:                                                                           "
      echo "INFO: If you accept, please keep in mind that you will lose any manual          "
      echo "INFO: modification in this file, like the syslog port or the workflows and will "
      echo "INFO: certainly have to add them again.                                         "
      echo "INFO:                                                                           "
      echo "INFO: We recommend that you respond NO to this question                         "
      echo "INFO: ('keep your currently-installed version'). Rudder's upgrade script will   "
      echo "INFO: take care of this automatically.                                          "
      echo "INFO:                                                                           "
      echo "********************************************************************************"
      #if the stops fails, it's probably because it was not started
      service rudder-jetty stop || true

      if [ -x /opt/rudder/bin/rudder-pkg ]
      then
        /opt/rudder/bin/rudder-pkg plugin save-status > /tmp/rudder-plugins-upgrade
      fi


    ;;

    abort-upgrade)
    ;;

    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

case "$1" in
    install|upgrade)
        # Prepare the migration of /etc/default/rudder-jetty
        if [ -f /opt/rudder/etc/rudder-jetty.conf ]; then
          if [ $(head -n 1 /opt/rudder/etc/rudder-jetty.conf | grep -c 'WARNING') -eq 0 ]; then
            cp /opt/rudder/etc/rudder-jetty.conf /opt/rudder/etc/rudder-jetty.conf.migrate
          fi
        fi
    ;;
esac


# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
